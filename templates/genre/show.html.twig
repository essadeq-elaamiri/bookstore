{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">Genre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ genre.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('genre_index') }}" class="btn btn-primary mt-3 mb-3 btn-sm"><i class="fas fa-arrow-alt-circle-left"></i> back to list</a>

    {#% if app.user and 'ROLE_ADMIN' in app.user.roles %#}
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('genre_edit', {'id': genre.id}) }}" class="btn btn-secondary mt-3 mb-3 btn-sm"><i class="fas fa-edit"></i> edit</a>

    {{ include('genre/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
